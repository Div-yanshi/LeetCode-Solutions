class Solution {
    public boolean check(int[] arr) {int flag=0;
      for(int i=1;i<arr.length;i++)
        {
            if(arr[i]>=arr[i-1])
            continue;
            else{
                if(flag!=0 || arr[arr.length-1]>arr[0]){
                return false;}else{
                flag=1;
                continue;}

            }
        }
        return true;
        



    }
}
