class Solution {
     String res="";int count=1;
    public String getHappyString(int n, int k) {
 
          String s="abc";
         String str="";
        
        find(s,str,n,k);
        
      
        
          return res;
    }
    private void find(String s , String str, int n,int k)
    {
        if(str.length()==n){
            if(count == k)
             res=str;
             count++;
        return;}
        for(int i=0;i<s.length();i++){
           
        if(str.length()==0 || s.charAt(i)!=str.charAt(str.length()-1)  )
            find(s,str+s.charAt(i),n,k);
           
                     
        }
    }
}
