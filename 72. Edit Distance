class Solution {
    public int minDistance(String word1, String word2) {


        int dp[][]=new int[word1.length()+1][word2.length()+1];
        for(int i=0;i<word1.length();i++)
        Arrays.fill(dp[i],-1);
       
       int min=func(word1.length()-1,word2.length()-1,word1,word2,dp);
       return min; 
    }
    private int func(int i,int j,String s1,String s2,int dp[][])
    {

        if(i<0)
        return j+1;
        if(j<0)
        return i+1;
        
        if(dp[i][j]!=-1)
        return dp[i][j];
       
        if(s1.charAt(i)==s2.charAt(j))
        return dp[i][j]=0+func(i-1,j-1,s1,s2,dp);
        return dp[i][j]=1+ Math.min(func(i-1,j,s1,s2,dp),(Math.min(func(i,j-1,s1,s2,dp),func(i-1,j-1,s1,s2,dp)) ));
    }


}
