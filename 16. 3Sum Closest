class Solution {
  
    public static int threeSumClosest(int[] nums, int target) {
        int sum=0,min=Integer.MAX_VALUE,loc=0;int mindiff=0;
        Arrays.sort(nums);
        for(int i=0;i<nums.length-2;i++)
        {
            int left=i+1,right=nums.length-1;
            while(left<right)
            {
                sum=nums[i]+nums[left]+nums[right];
                if(sum<target)
                left++;
                else if(sum>target)
                right--;
                else if(sum==target)
                return target;
                 mindiff=Math.abs(sum-target);
                 if(mindiff<min){
                 min=mindiff;
            loc=sum;
            }

          
         }
          }return loc;
        
    }
}
