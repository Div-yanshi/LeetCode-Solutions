class Solution {
    public int removeDuplicates(int[] nums) {
        int cnt=0,max=nums[nums.length-1]+1,len=nums.length;
         
        for(int i=0;i<nums.length-1;i++)
        {
            if(nums[i]==nums[i+1])
            {
                cnt++;
                if(cnt>=2){
                nums[i]=max+1;
                len--;
                }
            }
            else
            cnt=0;
        }
        Arrays.sort(nums);
        return len;
        
    }
}
